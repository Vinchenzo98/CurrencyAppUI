@model CurrencyAppUI.Models.UserViewModel
@{
    ViewData["Title"] = "Profile";

}
<div class="container-fluid">
    <h2>Profile</h2>
  
    <h3>@Model.UserTag</h3>

    <h4>Accounts</h4>
    @foreach (var account in Model.AllAccounts)
    {
        <div>
            <strong>@account.AccountType</strong>
            <p>@account.Amount</p>
        </div>
    }
    
    <div class="justify-content-center">
        <h4>Transactions</h4>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="all-tab" data-toggle="tab" href="#home" role="tab" aria-controls="all" aria-selected="true">All</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="in-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="in" aria-selected="false">In</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="out-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="out" aria-selected="false">Out</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
                @foreach (var transaction in @Model.AllTransactions)
                {
                    <table> 
                        <tr>
                            <td>@transaction.CurrencyTag</td>
                            <td>@transaction.Amount</td>
                        </tr>
                    </table>
                }
            </div>
            <div class="tab-pane fade" id="in" role="tabpanel" aria-labelledby="in-tab">

                @foreach (var transaction in @Model.InTransactions)
                {
                    <table>
                        <tr>
                            <td>@transaction.CurrencyTag</td>
                            <td>@transaction.Amount</td>
                        </tr>
                    </table>
                }
            </div>
            <div class="tab-pane fade" id="out" role="tabpanel" aria-labelledby="out-tab">

                @foreach (var transaction in @Model.OutTransactions)
                {
                    <table>
                        <tr>
                            <td>@transaction.CurrencyTag</td>
                            <td>@transaction.Amount</td>
                        </tr>
                    </table>
                }
            </div>
        </div>
    </div>
</div>









